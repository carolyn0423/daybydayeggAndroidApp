<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_customer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bg_white_gradient_bar">

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="#3AAD37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_customer_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        android:textColor="#989898"
        app:layout_constraintStart_toEndOf="@+id/tv_customer_name"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/tv_customer_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/favorites_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_customer_select"
        style="@style/fontBoldTw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rec_stroke_green_button"
        android:gravity="center"
        android:text="選擇"
        android:textSize="13sp"
        android:textColor="@color/main"
        app:layout_constraintEnd_toEndOf="@+id/tv_customer_favorite"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/img_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/map"
        android:drawablePadding="12dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_customer_name"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_name" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="13sp"
        android:text="台北市大安區"
        app:layout_constraintStart_toStartOf="@id/img_address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_address" />

</androidx.constraintlayout.widget.ConstraintLayout>